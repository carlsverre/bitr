:if{condition: this['profile']}
  .title
    %a{href:"/users/"+profile.columns.username}
      .header= profile.columns.fullname || profile.columns.username
    :if{condition: profile.columns['signature']}
      .subheader= profile.columns.signature
    :if{condition: !userpage}
      %ul
        %li=profile.columns.username + ":"
        %li
          %a{href:"/users/"+profile.columns.username+"/groups"} Groups
        %li
          %a{href:"/users/"+profile.columns.username+"/friends"} Friends
    %hr
